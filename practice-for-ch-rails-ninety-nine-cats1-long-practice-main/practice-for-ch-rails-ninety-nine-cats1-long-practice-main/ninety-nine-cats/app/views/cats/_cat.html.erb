<h1><%= cat.name %></h1>

<table>
    <thead>
        <tr>
            <th> Attribute</th>
            <th> Value </th>
        </tr>
    <tbody>
        <tr>
            <td>Age</td>
            <td><%=cat.age%></td>
        </tr>
        <tr>
            <td>Birth_Date</td>
            <td><%=cat.birth_date%></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><%=cat.color%></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%=cat.sex%></td>
        </tr>
</table>
    <% if action == :index %>
        <li><a href="<%= cat_url(cat) %>">Cat Show Page</a></li>
    <% end %>